{
  "name": "react-ssr-app",
  "version": "1.0.0",
  "description": "React Server-Side Rendering Application",
  "type": "module",
  "main": "server/index.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "dev:server": "npm run build:server && nodemon --watch server --watch src --exec \"npm run build:server && node dist/server.cjs\"",
    "dev:client": "webpack --config webpack.config.mjs --mode development --watch",
    "build": "npm run lint && npm run type-check && npm run build:client && npm run build:server",
    "build:client": "webpack --config webpack.config.mjs --mode production",
    "build:server": "webpack --config webpack.server.mjs --mode production",
    "start": "node dist/server.cjs",
    "type-check": "tsc --noEmit",
    "type-check:watch": "tsc --noEmit --watch",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "lint:fix": "eslint . --ext .js,.jsx,.ts,.tsx --fix",
    "lint:check": "eslint . --ext .js,.jsx,.ts,.tsx --max-warnings 0"
  },
  "dependencies": {
    "express": "^4.18.2",
    "log4js": "^6.9.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.8.0"
  },
  "devDependencies": {
    "@babel/core": "^7.20.12",
    "@babel/node": "^7.28.0",
    "@babel/preset-env": "^7.20.2",
    "@babel/preset-react": "^7.18.6",
    "@babel/preset-typescript": "^7.27.1",
    "@eslint/js": "^9.35.0",
    "@types/express": "^5.0.3",
    "@types/log4js": "^0.0.33",
    "@types/node": "^24.3.1",
    "@types/react": "^19.1.12",
    "@types/react-dom": "^19.1.9",
    "@typescript-eslint/eslint-plugin": "^8.42.0",
    "@typescript-eslint/parser": "^8.42.0",
    "babel-loader": "^9.1.2",
    "concurrently": "^7.6.0",
    "css-loader": "^6.7.3",
    "eslint": "^9.35.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "html-webpack-plugin": "^5.5.0",
    "ignore-styles": "^5.0.1",
    "less": "^4.4.1",
    "less-loader": "^12.3.0",
    "nodemon": "^2.0.20",
    "style-loader": "^3.3.1",
    "ts-loader": "^9.5.4",
    "typescript": "^5.9.2",
    "webpack": "^5.75.0",
    "webpack-cli": "^5.0.1",
    "webpack-node-externals": "^3.0.0"
  }
}
